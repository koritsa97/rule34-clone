{{#with user}}
<h1>{{username}}</h1>
<a href="/account/settings">Settings</a>
<a href="/logout">Logout</a>

<h2>Favorite tags</h2>
<ul class="favorite-tags-list">
  {{#each favoriteTags}}
  <li class="favorite-tags-item favorite-tags-item-{{this.type}}">
    <a href="/posts?query={{this.name}}">{{this.name}}</a>
  </li>
  {{/each}}
</ul>

<h2>Favorite posts</h2>
{{> posts-list posts=favoritePosts }}

<h2>Uploads</h2>
{{> posts-list posts=uploads }}
{{/with}}