<div class="container">
  <form action="/account/settings" method="post">
    <div class="mb-3">
      <label class="form-label">Favorite tags</label>
      <div class="tags-field">
        <textarea name="favoriteTags" placeholder="Favorite tags" cols="30" rows="3"
          class="form-control">{{tagsString}}</textarea>
        <ul class="tags-autocomplete" hidden></ul>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>