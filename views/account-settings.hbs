<div class="container">
  <form action="/account/settings" method="post">
    <div class="mb-3">
      <label class="form-label">Favorite tags</label>
      <div id="favoriteTags" class="searchbar">
        <textarea name="favoriteTags" placeholder="Favorite tags" cols="30" rows="3"
          class="form-control">{{tagsString}}</textarea>
        <div class="list-group" hidden></div>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>

<script defer type="module">
  import { TagsAutocomplete } from '/scripts/autocomplete.js';

  new TagsAutocomplete('#favoriteTags');
</script>