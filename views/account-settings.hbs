<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/account/settings" method="post">
        <div class="mb-3">
          <label class="form-label" for="favoriteTags">Favorite tags</label>
          <div id="favoriteTags" class="searchbar">
            <textarea name="favoriteTags" placeholder="Favorite tags" cols="30" rows="3" class="form-control"
              id="favoriteTags">{{tagsString}}</textarea>
            <div class="list-group" hidden></div>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="username">Change username</label>
          <input type="text" name="username" placeholder="Enter new username" class="form-control" id="username"
            value="{{user.username}}" required>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</div>

<script defer type="module">
  import { TagsAutocomplete } from '/scripts/autocomplete.js';

  new TagsAutocomplete('#favoriteTags');
</script>